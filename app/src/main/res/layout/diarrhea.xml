<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@mipmap/sym">

    <TextView
        android:text="Pain is:"
        android:textColor="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="232dp">

        <RadioButton
            android:text="Ongoing or Recurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ongoing"
            android:textColor="#e5e5e5"
            android:layout_weight="1"/>

        <RadioButton
            android:text="Preceded by Recent Antbiotic Use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anti"
            android:textColor="#e5e5e5"
            android:layout_weight="1"/>

        <RadioButton
            android:text="Recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recent"
            android:textColor="#e5e5e5"
            android:layout_weight="1"/>

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:textColor="#e5e5e5"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:text="Accompanied By"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="#e5e5e5"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_weight="1"/>

        <RadioButton
            android:text="Adbominal Pain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pain"
            android:textColor="#e5e5e5"
            android:layout_weight="1"/>

        <RadioButton
            android:text="Nausea and Vomitting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton5"
            android:textColor="#e5e5e5"
            android:layout_weight="1"/>

    </RadioGroup>

    <Button
        android:text="CHECK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="calldir"/>

</LinearLayout>