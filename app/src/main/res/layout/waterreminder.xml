<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:text="Enter Weight:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignParentEnd="true"
        android:id="@+id/n1"
        android:layout_toEndOf="@+id/textView21"/>

    <TextView
        android:text="Wake Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvchange"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/n1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_below="@+id/tvchange"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="Set wake time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePicker"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:id="@+id/button7"
        android:layout_toStartOf="@+id/n1"
        android:onClick="onwake"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="Set Sleep Time"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:onClick="onsleep"
        android:layout_below="@+id/button7"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="Set Reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnid"
        android:onClick="butclick"
        android:layout_below="@+id/button8"
        android:layout_toStartOf="@+id/n1"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

</RelativeLayout>
